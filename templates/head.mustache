    <meta content="width=device-width,initial-scale=1" name="viewport">
    <link href="{{{ output.favicon }}}" rel="icon" type="image/x-icon" class="wb-init wb-favicon-inited">
    <link rel="apple-touch-icon" sizes="57x57 72x72 114x114 144x144 150x150" class="wb-favicon" href="{{{ wetboew }}}/GCWeb/assets/favicon-mobile.png">
    <link rel="stylesheet" href="{{{ wetboew }}}/GCWeb/css/theme.min.css">
